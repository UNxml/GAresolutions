    <preface>
      <p>
        <docNumber>75/229.</docNumber>
        <docTitle refersTo="#resolutionTitle">为消除贫困和保护环境促进包括生态旅游在内的可持续旅游业</docTitle>
      </p>
    </preface>
    <preamble>
      <formula name="enactingFormula" eId="formula_1">
        <p xml:space="preserve">
          <span class="bold">大会</span>，</p>
