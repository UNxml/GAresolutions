        <docNumber>79/260.</docNumber>
        <docTitle refersTo="#resolutionTitle">
          <span class="bold">	Непредвиденные и чрезвычайные расходы на 2025 год</span>
        </docTitle>
      </p>
    </preface>
    <preamble>
      <formula name="enactingFormula" eId="formula_1">
        <p xml:space="preserve">
          <span class="italic">Генеральная Ассамблея</span>
