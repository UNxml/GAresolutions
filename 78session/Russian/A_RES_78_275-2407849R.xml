        <docNumber>78/275.</docNumber>
        <docTitle refersTo="#resolutionTitle">
          <span class="bold">	Поправки к Положениям и правилам о персонале</span>
        </docTitle>
      </p>
    </preface>
    <preamble>
      <formula name="enactingFormula" eId="formula_1">
        <p xml:space="preserve">
          <span class="italic">Генеральная Ассамблея</span>,</p>
      </formula>
      <container name="ссылаясь" eId="container_2">
        <p xml:space="preserve">
          <span class="italic">	ссылаясь</span> на статьи 8, 97 и 100 Устава Организации Объединенных Наций,</p>
      </container>
      <container name="ссылаясь также" eId="container_3">
        <p xml:space="preserve">
          <span class="italic">	ссылаясь также</span> на статью 101 Устава, которая регулирует вопросы назначения, найма и набора персонала,</p>
      </container>
      <container name="ссылаясь далее" eId="container_4">
