        <docNumber>78/255.</docNumber>
        <docTitle refersTo="#resolutionTitle">
          <span class="bold">	Dépenses imprévues et extraordinaires de l’exercice 2024</span>
        </docTitle>
      </p>
    </preface>
    <preamble>
      <formula name="enactingFormula" eId="formula_1">
        <p xml:space="preserve">
          <span class="italic">L’Assemblée générale</span>
        </p>
      </formula>
